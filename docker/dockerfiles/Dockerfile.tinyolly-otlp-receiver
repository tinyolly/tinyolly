# TinyOlly OTLP Receiver Dockerfile (gRPC)
FROM tinyolly/python-base:latest

ARG APP_DIR=tinyolly-otlp-receiver

WORKDIR /app

# Install app-specific dependencies
COPY apps/${APP_DIR}/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application
COPY apps/${APP_DIR}/tinyolly-otlp-receiver.py .

# Expose gRPC port
EXPOSE 4343

# Set Python to unbuffered mode for immediate log output
ENV PYTHONUNBUFFERED=1

# Run the application with OpenTelemetry auto-instrumentation
CMD ["opentelemetry-instrument", "python", "-u", "tinyolly-otlp-receiver.py"]
